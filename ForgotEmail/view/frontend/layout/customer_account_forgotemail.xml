<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Forgot Your Email?</title>
    </head>
    <body>
        <referenceBlock name="root">
            <action method="setHeaderTitle">
                <argument translate="true" name="title" xsi:type="string">Email forgotten</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Tatix\ForgotEmail\Block\Account\Forgotemail" name="forgotEmail" template="Tatix_ForgotEmail::form/forgotemail.phtml">
                <container name="form.additional.info" as="form_additional_info"/>
            </block>
        </referenceContainer>
    </body>
</page>